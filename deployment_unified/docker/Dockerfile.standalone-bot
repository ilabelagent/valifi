# Standalone Trading Bot Dockerfile
# Generic Dockerfile for all 14 standalone trading bots

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY ../shared ../shared

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy source code
COPY src/ ./src/
COPY tsconfig.json ./
COPY .env.example ./

# Install tsx for running TypeScript
RUN npm install -g tsx typescript

# Build if build script exists
RUN npm run build || echo "No build script, using tsx"

# Create state and logs directories
RUN mkdir -p /app/state /app/logs

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
  CMD node -e "require('http').get('http://localhost:${PORT}/health', (r) => { process.exit(r.statusCode === 200 ? 0 : 1); });"

# Expose port (set by environment variable)
EXPOSE ${PORT}

# Start bot
CMD ["tsx", "src/index.ts"]
