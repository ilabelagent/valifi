# Telegram Bot Dockerfile (JESUS_CARTEL_BOT, JESUS_IAM_BOT)

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy source code
COPY src/ ./src/
COPY tsconfig.json ./
COPY .env.example ./

# Install tsx for running TypeScript
RUN npm install -g tsx typescript

# Build if build script exists
RUN npm run build || echo "No build script, using tsx"

# Create logs directory
RUN mkdir -p /app/logs

# Health check (Telegram bots don't expose HTTP, so just check process)
HEALTHCHECK --interval=60s --timeout=10s --retries=3 \
  CMD pgrep -f "tsx" > /dev/null || exit 1

# Start bot
CMD ["tsx", "src/index.ts"]
