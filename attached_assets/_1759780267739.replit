modules = ["nodejs-20", "php-8.2", "postgresql-16", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["imagemagick_light", "nano"]

[deployment]
deploymentTarget = "autoscale"
run = ["next", "start"]
build = ["next", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Kingdom System"

[[workflows.workflow]]
name = "Kingdom System"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run full-stack"
waitForPort = 5000

[[ports]]
