
# Dockerfile for the unified GodBrain Apex service
FROM node:18-alpine

# Install build tools for native modules (like node-pty) and nmap
RUN apk add --no-cache python3 make g++ nmap

WORKDIR /usr/src/app

# Install app dependencies
# A wildcard is used to ensure both package.json AND package-lock.json are copied
COPY package*.json ./
RUN npm install

# Bundle app source
COPY . .

# Compile TypeScript
# The tsconfig.json specifies "outDir": "./dist"
RUN npm install -g typescript
RUN tsc

# The main server entrypoint will load all services and start the gateway
CMD [ "node", "dist/src/server.js" ]
